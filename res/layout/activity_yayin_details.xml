<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

    <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tvYayinDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="22sp"/>

        <TextView
                android:id="@+id/tvYayinDetailRelatedInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#BBBBBB"
                android:textSize="16sp"
                android:layout_margin="10dp"/>

        <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
            android:id="@+id/buttonOpenPDF"
            android:layout_width="match_parent"
            android:text="PDF YÃ¼kleniyor %0"
            android:layout_below="@+id/headerLayout"
            android:layout_above="@+id/footerLayout"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:textColor="#BBBBBB"
            android:gravity="center"/>

    <RelativeLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#352354"
            android:padding="1dp"
            android:layout_alignParentBottom="true">

        <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/buttonAddReadList"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/readlist"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/buttonRemoveReadList"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/readlist_selected"
                    android:visibility="gone"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/buttonAddFavList"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/favlist"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/buttonRemoveFavList"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/favlist_selected"
                    android:visibility="gone"
                    android:layout_weight="1"/>

            <Button
                    android:id="@+id/bShare"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/share"
                    android:layout_weight="1"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>